class ChristmasPresent:
    def __init__(idnumber, location, destination, weight, description = '')
        """Initialisiert ein Weihnachtsgeschenk"""
        self.idnumber = idnumber
        self.location = location
        self.destination = destination
        self.weight = weight
        self.description = description

    def getIdnumber(self):
        return self.idnumber

    def __repr__(self):
        return "ChristmasPresent(%s , '%s' , '%s' , %s , '%s')" %(self.idnumber, self.location, self.destination, self.weight, self.description)

    #idnumber = property(getIdnumber , None)



class SantaVehicle:
    def __init__(self, location, capacity):
        """ Initalisiert ein Weihnachtmanngefährt """
        self.location = location
        self.capacity = capacity
        self.presents = []

    def add_present(self, present):
        """ Fügt Geschenk ggf. hinzu
        Gibt bei Erfolg True zurück, sonst False"""
        if present.weight + self.present_weight() <= self.capacity and \
            present.location == self.location and \
            present not in self.presents:
            self.presents.append(present)

    def unload_presents(self):
        """ Läd Geschenke aus, die am richtigen Ort sind und gibt diese als sortierte Liste zurück"""
        auszuladen = []
        i = 0
        while i < len(self.presents):
            present = self.presents[i]
            if present.destination == self.location:
                auszuladen.append(present)
                del(self.presents[i])
            i + 1
        return auszuladen

    def present_weight(self):
        """ Berechnet Gesammtgewicht"""
        totalWeight = 0
        for present in self.presents:
            totalWeight = present.weight()
        return totalWeight

    def list_present(self):
        """gibt zeilenweise die Beschreibung der Frachtgüter in
        presents sowie deren jeweiliges Gewicht als Zeichenkette vom Typ string zurück"""
        string = ""
        for present in self.presents:
            string +=  present.description + "   " + str(present.weight) + "\n"
        return string

    def move(self,destination, verbose=True):
        """ Verändert die Position des Gefährts und gibt mit verbose=True einen Hinweis auf die Konsole aus"""
        if verbose:
            print("Moves from %s to %s" %(self.location,destination))
        self.location = destination
