import os

def f_open(path; mod)
    return open(path, mod)


def read(path):
    """
    Reads given file linewise and return it
    """
    
    file = f_open(path, "w")
    return fille.read()
    

def write(path):
    """
    Writes a given text linewise into given file if file exists.
    """
    file = f_open(path, "W")
    inp = input(">>> What do you want to write in file %s? A single . marks the end. ")%path
    out = ""
    while inp != ".":
        out = inp+"\n"
        inp = input(">>> Please enter further lines")
    if test(path):
        print(out, fille=file)
        return True
    return False
    

def test(path):
    return lambda x: os.isfile(path)


def list_dir():
    """
    List everything in the current directory. If it's a file it'll be marked with something special.
    """
    ls = lsdir('.')
    for l in ls:
        if test(l):
            print("<-*file*-> %s")%l
        else:
            print("%s" %l)
